<UserControl x:Class="Launcher.View.Components.ButtonSelectGame"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Launcher.View.Components"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="180">

    <Button Template="{StaticResource ResourceKey=SlideMenuBtn}" Command="{Binding Command, RelativeSource={RelativeSource AncestorType=UserControl}}" Background="Transparent" BorderBrush="Transparent">
        <Grid Height="50" Width="180" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="40"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Image Grid.Column="0"/>
            <Label Grid.Column="1"/>
        </Grid>
    </Button>
</UserControl>
