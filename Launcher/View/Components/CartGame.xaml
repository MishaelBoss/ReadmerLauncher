<UserControl x:Class="Launcher.View.Components.CartGame"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Launcher.View.Components"
             mc:Ignorable="d" 
             Background="Black"
             d:DesignHeight="200" d:DesignWidth="300" MaxHeight="200" MaxWidth="300">

    <Button Style="{DynamicResource ButtonViewCartGame}" Command="{Binding openInformationGamePage}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>
            <Image Name="Image" Grid.Row="0" Source="{Binding SetIcon, RelativeSource={RelativeSource AncestorType=UserControl}}" Stretch="UniformToFill" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            <Label Name="Name" Grid.Row="1" Content="{Binding SetName, RelativeSource={RelativeSource AncestorType=UserControl}}" Foreground="White"/>
        </Grid>
    </Button>
</UserControl>
