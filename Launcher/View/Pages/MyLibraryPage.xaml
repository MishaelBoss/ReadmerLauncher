<Page x:Class="Launcher.View.Pages.MyLibraryPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Launcher.View.Pages"
      xmlns:vm="clr-namespace:Launcher.ViewModel"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="1000"
      Title="MyLibraryPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="180"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <Border Background="Black" Opacity="0.6"/>
            <StackPanel Name="LeftBorder" Orientation="Vertical"/>
        </Grid>
        <Grid Grid.Column="1" Name="LibraryGrid">
            <Frame Name="LibraryFrame" NavigationUIVisibility="Hidden"/>
        </Grid>
    </Grid>
</Page>
