<Window x:Class="Launcher.View.Windows.NotificationMessageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Launcher.View.Windows"
        mc:Ignorable="d"
        Background="Transparent"
        Title="NotificationMessageWindow" Height="150" Width="300" WindowStyle="None" AllowsTransparency="True">

    <Window.Clip>
        <RectangleGeometry Rect="0,0,300,150" RadiusX="10" RadiusY="10"/>
    </Window.Clip>

    <Grid Background="#FF333333">
        <StackPanel>
            <Image Name="IconNotificationMessageWindow" Source="/View/Resources/Image/collapseproject_white.png" 
                       Width="30" Height="30" Margin="10" Visibility="Collapsed"/>
            <TextBlock Name="TitleText" Text="Вышла новая версия лаунчера"
                       Foreground="White" FontSize="16" FontWeight="Bold" Margin="10" HorizontalAlignment="Center"/>
            <TextBlock Name="ContentText" Text="Нажмите здесь, чтобы узнать больше."
                       Foreground="White" FontSize="14" Margin="10" HorizontalAlignment="Center"/>

        </StackPanel>
        <TextBlock Name="LinkText" Text="Нажмите здесь, чтобы узнать больше."
                Foreground="White" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Bottom"/>
    </Grid>
</Window>
